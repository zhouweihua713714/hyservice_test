FROM registry.cn-shanghai.aliyuncs.com/mathits/hy:base-server-image as build


WORKDIR /app/
COPY package.json ./package.json
COPY yarn.lock ./yarn.lock

# make sure devDependencies are installed
ENV NODE_ENV=test  
RUN yarn

COPY . ./

COPY ./ci.sh ./
RUN chmod -R 755 /app/ci.sh
CMD ["/bin/bash","-c","/app/ci.sh"]